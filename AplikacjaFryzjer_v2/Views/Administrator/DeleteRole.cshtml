@model Application.ViewModels.EditRoleViewModel

@{ 
    ViewBag.Title = "Usuwanie profilu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edycja profilu</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-action="ListRoles" class="btn btn-primary">Wróć do listy profili</a>
            <button asp-action="DeleteRole" type="submit" class="btn btn-danger">Usuń profil</button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Użytkownicy przypisani do profilu</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Brak przypisanych użytkowników</h5>
            }
        </div>
    </div>
</form>